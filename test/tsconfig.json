{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es5", "dom"],
    "types": ["jest", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": ["**/*.ts"]
}
