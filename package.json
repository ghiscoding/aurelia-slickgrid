{
  "name": "aurelia-slickgrid",
  "version": "2.3.0",
  "description": "Slickgrid components made available in Aurelia",
  "keywords": [
    "aurelia",
    "plugin",
    "slickgrid"
  ],
  "homepage": "https://github.com/ghiscoding/aurelia-slickgrid",
  "bugs": {
    "url": "https://github.com/ghiscoding/aurelia-slickgrid/issues"
  },
  "license": "MIT",
  "author": "Ghislain B.",
  "main": "dist/commonjs/index.js",
  "typings": "dist/aurelia-slickgrid.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/ghiscoding/aurelia-slickgrid"
  },
  "scripts": {
    "lint": "cross-env tslint --project tsconfig.json",
    "pretest": "cross-env npm run lint",
    "test": "cross-env rimraf dist && tsc && karma start --single-run",
    "develop": "concurrently \"./node_modules/.bin/tsc --watch\" \"./node_modules/.bin/karma start\"",
    "prebuild:amd": "cross-env rimraf dist/amd",
    "build:amd": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/amd --module amd",
    "postbuild:amd": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/amd",
    "prebuild:commonjs": "cross-env rimraf dist/commonjs",
    "build:commonjs": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/commonjs --module commonjs",
    "postbuild:commonjs": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/commonjs",
    "prebuild:es2017": "cross-env rimraf dist/es2017",
    "build:es2017": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/es2017 --module es2015 --target es2017",
    "postbuild:es2017": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/es2017",
    "prebuild:es2015": "cross-env rimraf dist/es2015",
    "build:es2015": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/es2015 --module es2015 --target es2015",
    "postbuild:es2015": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/es2015",
    "prebuild:native-modules": "cross-env rimraf dist/native-modules",
    "build:native-modules": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/native-modules --module es2015",
    "postbuild:native-modules": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/native-modules",
    "prebuild:system": "cross-env rimraf dist/system",
    "build:system": "cross-env tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outDir dist/system --module system",
    "postbuild:system": "cross-env copyfiles --up 3 aurelia-slickgrid/src/aurelia-slickgrid/**/*.html dist/system",
    "prebuild": "cross-env rimraf dist",
    "build": "npm-run-all build:amd build:commonjs build:es2015 build:es2017 build:native-modules build:system sass:build sass:copy copy-i18n:dist copy-asset-lib",
    "postbuild": "npm-run-all del-lib:client-cli del-lib:github-demo copy-lib:client-cli copy-lib:github-demo",
    "copy-asset-lib": "cross-env copyfiles --up 2 aurelia-slickgrid/assets/lib/** dist",
    "copy-i18n:dist": "cross-env copyfiles --up 3 aurelia-slickgrid/assets/i18n/**/*.* dist/i18n",
    "copy-i18n:client-cli": "cross-env copyfiles --up 2 dist/i18n/**/*.* client-cli/assets/i18n",
    "copy-i18n:github-demo": "cross-env copyfiles --up 2 dist/i18n/**/*.* doc/github-demo/assets/i18n",
    "copy-lib:client-cli": "cross-env copyfiles package.json dist/**/*.* client-cli/node_modules/aurelia-slickgrid",
    "copy-lib:github-demo": "cross-env copyfiles package.json dist/**/*.* doc/github-demo/node_modules/aurelia-slickgrid",
    "del-lib:client-cli": "cross-env rimraf client-cli/node_modules/aurelia-slickgrid",
    "del-lib:github-demo": "cross-env rimraf doc/github-demo/node_modules/aurelia-slickgrid",
    "predoc": "cross-env rimraf doc/api.json && rimraf dist/doc-temp && tsc --project aurelia-slickgrid/src/aurelia-slickgrid/tsconfig.build.json --outFile dist/doc-temp/aurelia-validation.js && node doc/shape-defs && copyfiles tsconfig.json dist/doc-temp",
    "doc": "cross-env typedoc --json doc/api.json --excludeExternals --includeDeclarations --mode modules --target ES6 --name aurelia-validation-docs dist/doc-temp/",
    "postdoc": "cross-env node doc/shape-doc && rimraf dist/doc-temp",
    "changelog": "cross-env conventional-changelog -p angular -i doc/CHANGELOG.md -s",
    "bump-version": "npm --no-git-tag-version version",
    "preprepare-release": "cross-env npm run test",
    "prepare-release": "cross-env npm run changelog && npm run build && npm run doc",
    "release": "standard-version",
    "sass-build-task:scss-compile": "node-sass --source-map true aurelia-slickgrid/src/aurelia-slickgrid/styles/ -o dist/styles/css",
    "sass-build-task:autoprefixer": "postcss dist/styles/css/*.css --use autoprefixer -d dist/styles/css",
    "sass:build": "npm-run-all -p sass-build-task:*",
    "sass:copy": "cross-env copyfiles -f aurelia-slickgrid/src/aurelia-slickgrid/styles/*.scss dist/styles/sass",
    "sass:watch": "node-sass 'aurelia-slickgrid/src/aurelia-slickgrid/styles/**/*.scss' -c 'npm run sass:build'",
    "sass:dev": "npm-run-all -p sass:*",
    "start:dev": "cd aurelia-slickgrid && yarn start",
    "prestart:client-cli": "cross-env npm run copy-i18n:client-cli",
    "start:client-cli": "cd client-cli && au run --watch",
    "build:github-demo": "cd doc/github-demo && yarn start build",
    "prestart:github-demo": "cross-env npm run copy-i18n:github-demo",
    "start:github-demo": "cd doc/github-demo && yarn start"
  },
  "dependencies": {
    "aurelia-event-aggregator": ">=1.0.1",
    "aurelia-framework": ">=1.1.0",
    "aurelia-i18n": ">=2.1.0",
    "aurelia-pal": ">=1.4.0",
    "dompurify": "^1.0.7",
    "flatpickr": ">=4.2.4",
    "i18next-xhr-backend": ">=1.5.0",
    "jquery": ">=3.2.1",
    "jquery-ui-dist": "^1.12.1",
    "lodash.isequal": "^4.5.0",
    "moment": ">=2.18.1",
    "moment-mini": ">=2.18.1",
    "slickgrid": "~2.3.21",
    "text-encoding-utf-8": "^1.0.2"
  },
  "devDependencies": {
    "@types/flatpickr": "^3.1.2",
    "@types/jquery": "^3.3.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^8.0.20",
    "@types/text-encoding-utf-8": "^1.0.1",
    "aurelia-bootstrapper": "^2.1.1",
    "aurelia-pal-browser": "^1.2.1",
    "aurelia-pal-nodejs": "^1.0.0-beta.1.0.0",
    "aurelia-polyfills": "^1.2.2",
    "aurelia-testing": "^1.0.0-beta.3.0.1",
    "autoprefixer": "^7.1.4",
    "concurrently": "^3.5.0",
    "conventional-changelog-cli": "^1.3.2",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.5",
    "jasmine-core": "^2.7.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-requirejs": "^1.1.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "requirejs": "^2.3.4",
    "requirejs-text": "^2.0.15",
    "rimraf": "^2.6.1",
    "standard-version": "^4.3.0",
    "tslint": "^5.6.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.7.2"
  },
  "aurelia": {
    "build": {
      "resources": [
        "aurelia-slickgrid/aurelia-slickgrid",
        "aurelia-slickgrid/slick-pagination"
      ]
    }
  },
  "standard-version": {
    "skip": {
      "bump": false,
      "changelog": false,
      "commit": false,
      "tag": false
    }
  }
}
