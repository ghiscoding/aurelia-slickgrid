{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "exclude": [
    "aurelia_project",
    "dist",
    "jspm_packages",
    "node_modules",
    "**/*.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/typings/**/*.ts"
  ],
  "typeAcquisition": { "include": ["jest"] }
}
